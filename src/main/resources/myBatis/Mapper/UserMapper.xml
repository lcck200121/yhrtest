<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yhr.Mapper.UserMapper">
    <select id="userLogin" resultType="User">
        select * from user_info where user_name = #{user_name} and user_pwd = #{user_pwd}
    </select>
    <update id="UpdateUser">
        UPDATE user_info
  SET user_pwd = #{user_pwd}
  WHERE user_name = #{user_name}
    </update>
    <select id="findUserById" resultType="User">
        select * from user_info where user_id=#{user_id}
    </select>
    <select id="findUserByName" resultType="User">
        select * from user_info where user_name=#{user_name}
    </select>

    <insert id="addUser" parameterType="User">
        INSERT INTO user_info(user_name, user_pwd) VALUES(#{user_name}, #{user_pwd})
    </insert>
</mapper>
